<!DOCTYPE html>
<html>
<head>
  <title>Anagram Checker</title>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script>
    $(document).ready(function(){
      $("#checkAnagram").click(function(){
        var str1 = $("#inputString1").val().toLowerCase().replace(/[^a-z]/g, ''); // Convert to lowercase and remove non-alphabetic characters
        var str2 = $("#inputString2").val().toLowerCase().replace(/[^a-z]/g, ''); // Convert to lowercase and remove non-alphabetic characters

        if(str1.length !== str2.length){
          $("#result").text("Not anagrams");
          return;
        }

        var sortedStr1 = str1.split('').sort().join('');
        var sortedStr2 = str2.split('').sort().join('');

        if(sortedStr1 === sortedStr2){
          $("#result").text("Anagrams");
        } else {
          $("#result").text("Not anagrams");
        }
      });
    });
  </script>
</head>
<body>

<h2>Anagram Checker</h2>
<p>Enter two strings below to check if they are anagrams:</p>
<input type="text" id="inputString1" placeholder="Enter first string">
<input type="text" id="inputString2" placeholder="Enter second string">
<button id="checkAnagram">Check Anagram</button>
<p id="result"></p>

</body>
</html>
